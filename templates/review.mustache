<div class="exam-modal exam-modal-show {{^isreview }}d-none{{/isreview }}">
    <div class="exam-modal-parent">
        <div class="exam-modal-head">
            <div class="exam-modal-header text-center">{{{ quiz_name }}}</div>
            <div class="exam-modal-hr">&nbsp;</div>
        </div>
    </div>
    <div class="exam-modal-body">
        <div class="exam-modal-icon">
            <span class="fa-stack">
                <i class="fa fa-circle-o fa-stack-2x"></i>
                <i class="fa fa-check fa-stack-1x"></i>
            </span>
        </div>
        <div class="exam-modal-text">{{# str }} modaltext, theme_quizzer {{/ str }}</div>
        <div class="exam-modal-extra-text">{{# str }} modaltextextra, theme_quizzer {{/ str }}</div>
    </div>
</div>